{
	"id": "de.jnc.sample.jnc_box",
	"version": "1.0.0",
	"name": "Sample Box",
	"description": "Sample Simple box",
	"newInstancePrefix": "JNC_Box",
	"icon": "https://github.com/juergennoe/sac_widgets/blob/main/sample_Widget/icon.png",
	"vendor": "JNC",
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "de-jnc-sample-jnc_box",
			"url": "https://www.sample.com/customwidgets/coloredbox/coloredbox.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "styling",
			"tag": "de-jnc-sample-jnc_box-styling",
			"url": "https://www.sample.com/customwidgets/coloredbox/coloredbox_styling.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "builder",
			"tag": "de-jnc-sample-jnc_box-builder",
			"url": "https://www.sample.com/customwidgets/coloredbox/coloredbox_builder.js",
			"integrity": "",
			"ignoreIntegrity": true
		}
	],
	"properties": {
		"color": {
			"type": "string",
			"description": "Background color",
			"default": "red"
		},
		"opacity": {
			"type": "number",
			"description": "Opacity",
			"default": 1
		},
		"width": {
			"type": "integer",
			"default": 100
		},
		"height": {
			"type": "integer",
			"default": 100
		}
	},
	"methods": {
		"setColor": {
			"description": "Sets the background color.",
			"parameters": [
				{
					"name": "newColor",
					"type": "string",
					"description": "The new background color"
				}
			],
			"body": "this.color = newColor;"
		},
		"getColor": {
			"returnType": "string",
			"description": "Returns the background color.",
			"body": "return this.color;"
		}
	},
	"events": {
		"onClick": {
			"description": "Called when the user clicks the JNC Box."
		}
	}
}

 